#include <stdio.h>
int main() {
    int rows, i, j;
    printf("Enter the numberof rows for the inverted pyramid pattern:");
    scanf("%d", &rows);
    
    for(i=rows;i>=1;i--){
    for(j=rows;j>0;j--){
        printf(" ");
    }
    for(j=1;j<=2*i-1;j++);{
        printf("*");
    }
    printf("\n");
    }
    return 0;
}
